  "conditional_logic": {
    "modifiers": [
      {
        "id": "relajacion_boost_no_coagulos_goteo",
        "when_all": [
          {
            "any_of": [
              {
                "question": "P2_textura",
                "equals": "fluido"
              },
              {
                "question": "P2_textura",
                "equals": "espeso"
              },
              {
                "question": "P2_coagulo_tamano",
                "in": [
                  "<0cm",
                  "<1cm"
                ]
              }
            ]
          },
          {
            "question": "P2_patron_flujo",
            "equals": "goteo_lento_prolongado"
          }
        ],
        "adjust": {
          "add_scores": {
            "relajacion": 2
          }
        },
        "note": "Si no hay coágulos o son muy pequeños, y hay goteo prolongado, priorizar tono bajo sobre humedad."
      },

      {
        "id": "relajacion_boost_fatiga_alta_no_coagulos",
        "when_all": [
          {
            "any_of": [
              {
                "question": "P2_textura",
                "not_equals": "coagulos"
              },
              {
                "question": "P2_coagulo_tamano",
                "in": [
                  "<0cm",
                  "<1cm"
                ]
              }
            ]
          },

          {
            "question": "P2_fatiga_severidad",
            "gte": 7
          }
        ],

        "adjust": {
          "variable_map_multiplier": {
            "target_question": "P2_fatiga_severidad",
            "variable": "relajacion",
            "multiplier": 1.45
          }
        },
        "note": "Fatiga alta sin coágulos significativos inclina hacia Relajación (bajo tono)."
      },
      {
        "id": "amenorrhea_6m_bias",
        "when_all": [
          {
            "question": "P1_regularity",
            "equals": "No tengo sangrado actualmente"
          },
          {
            "question": "P1_no_cycle_desde_cuando",
            "equals": ">6m"
          }
        ],

        "adjust": {
          "add_scores": {
            "sequedad": 1,
            "frio": 1,
            "relajacion": 1
          }
        },

        "trigger_advisories": [
          "amenorrhea_6m"
        ],
        "note": "Amenorrea >6m: reforzar Tierra (frío+sequedad) y posible bajo tono."
      },
      {
        "id": "amenorrhea_lactancia_bias",
        "when_all": [
          {
            "question": "P1_regularity",
            "equals": "No tengo sangrado actualmente"
          },
          {
            "question": "P1_no_cycle_desde_cuando",
            "equals": ">6m"
          },
          {
            "question": "P1_amenorrea_contexto",
            "equals": "lactancia"
          }
        ],
        "adjust": {
          "add_scores": {
            "sequedad": 1,
            "relajacion": 1
          }
        },

        "trigger_advisories": [
          "amenorrhea_lactancia"
        ],
        "note": "Amenorrea en lactancia prolongada: sesgo a sequedad y bajo tono."
      },
      {
